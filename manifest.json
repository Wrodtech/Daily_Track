{
  "name": "DailyTrack",
  "short_name": "DailyTrack",
  "description": "Personal Life Manager - Track tasks, expenses, habits, and journal entries",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#4f46e5",
  "theme_color": "#4f46e5",
  "orientation": "portrait-primary",
  "scope": "/",
  "id": "/",
  "categories": ["productivity", "lifestyle", "finance", "health"],
  "lang": "en",
  "dir": "ltr",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Task",
      "short_name": "Task",
      "description": "Quickly add a new task",
      "url": "/?shortcut=task",
      "icons": [{ "src": "icons/task-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Add Expense",
      "short_name": "Expense",
      "description": "Quickly add an expense",
      "url": "/?shortcut=expense",
      "icons": [{ "src": "icons/expense-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Journal Entry",
      "short_name": "Journal",
      "description": "Write a journal entry",
      "url": "/?shortcut=journal",
      "icons": [{ "src": "icons/journal-icon.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/dashboard.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard View"
    },
    {
      "src": "screenshots/tasks.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tasks View"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+DailyTrack",
      "url": "/?action=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "handle_links": "preferred",
  "edge_side_panel": {},
  "permissions": [
    "notifications",
    "storage",
    "background-sync"
  ]
}